{
   "name": "add-dist-header",
   "version": "1.2.2",
   "description": "Prepend a one-line banner comment (with license notice) to distribution files",
   "license": "MIT",
   "type": "module",
   "module": "dist/add-dist-header.js",
   "main": "dist/add-dist-header.js",
   "types": "dist/add-dist-header.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/add-dist-header.js"
      },
      "./": "./dist/"
   },
   "bin": {
      "add-dist-header": "bin/cli.js",
      "dist-header": "bin/cli.js"
   },
   "repository": "github:center-key/add-dist-header",
   "homepage": "https://github.com/center-key/add-dist-header",
   "bugs": "https://github.com/center-key/add-dist-header/issues",
   "docs": "https://github.com/center-key/add-dist-header#readme",
   "author": "Center Key (https://centerkey.com)",
   "keywords": [
      "banner",
      "directory",
      "dist",
      "distribution",
      "file",
      "folder",
      "header",
      "prepend"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "node": true,
      "mocha": true
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "runScriptsConfig": {
      "clean": [
         "rimraf build dist spec/fixtures/target"
      ],
      "build": [
         "jshint . --exclude-path .gitignore",
         "eslint --max-warnings 0 . --ext .ts",
         "tsc",
         "copy-file build/add-dist-header.js --folder dist",
         "node bin/cli.js --no-version build dist"
      ]
   },
   "scripts": {
      "pretest": "run-scripts clean build",
      "test": "mocha spec/*.spec.js && w3c-html-validator"
   },
   "dependencies": {
      "chalk": "~5.3",
      "cli-argv-util": "~1.2",
      "fancy-log": "~2.0",
      "glob": "~10.3",
      "istextorbinary": "~6.0",
      "make-dir": "~4.0",
      "slash": "~5.1"
   },
   "devDependencies": {
      "@types/fancy-log": "~2.0",
      "@types/glob": "~8.1",
      "@types/node": "~20.5",
      "@typescript-eslint/eslint-plugin": "~6.4",
      "@typescript-eslint/parser": "~6.4",
      "assert-deep-strict-equal": "~1.1",
      "copy-file-util": "~1.1",
      "copy-folder-util": "~1.1",
      "eslint": "~8.47",
      "jshint": "~2.13",
      "mocha": "~10.2",
      "rimraf": "~5.0",
      "run-scripts-util": "~1.2",
      "typescript": "~5.1",
      "w3c-html-validator": "~1.4"
   }
}
